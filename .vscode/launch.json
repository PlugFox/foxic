{
    "version": "0.2.0",
    "configurations": [
        /* ───── Server ───── */
        {
            "name": "server:run",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "dev",
                "--",
                "--strictPort",
                "--port",
                "5173",
                "--host"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "env": {
                "FORCE_COLOR": "1"
            },
            "serverReadyAction": {
                "pattern": "Local:\\s*(https?://localhost:\\d+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "presentation": {
                "group": "Server",
                "order": 1
            }
        },
        /* ───── Chrome ───── */
        {
            "name": "web:chrome:new",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "smartStep": true,
            "skipFiles": [
                "**/node_modules/**",
                "<node_internals>/**"
            ],
            "sourceMapPathOverrides": {
                "*/src/*": "${webRoot}/src/*",
                "webpack:///src/*": "${webRoot}/src/*",
                "vite/dist/*": "${webRoot}/*"
            },
            "preLaunchTask": "server:start",
            "presentation": {
                "group": "Chrome",
                "order": 1
            }
        },
        {
            "name": "web:chrome:attach",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "url": "http://localhost:5173",
            "presentation": {
                "group": "Chrome",
                "order": 2
            }
        },
        /* ───── Edge ───── */
        {
            "name": "web:edge:new",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "group": "Edge",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "debug:full",
            "configurations": [
                "server:run",
                "web:chrome:new"
            ]
        }
    ]
}