{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "server:start",
      "detail": "Start server",
      "type": "process",
      "command": "npm",
      "args": [
        "run",
        "dev",
        "--",
        "--strictPort",
        "--port",
        "5173",
        "--host"
      ],
      "isBackground": true,
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "FORCE_COLOR": "1"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local:\\s*https?://\\S+"
        }
      }
    },
    {
      "label": "server:preview",
      "detail": "Preview production build",
      "type": "process",
      "command": "npm",
      "args": [
        "run",
        "preview",
        "--",
        "--strictPort",
        "--port",
        "4173",
        "--host"
      ],
      "isBackground": true,
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local:\\s*https?://\\S+"
        }
      },
      "dependsOn": [
        "build:prod"
      ]
    },
    {
      "label": "build:prod",
      "detail": "Build production",
      "type": "process",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "deps:install",
      "detail": "Install dependencies",
      "type": "process",
      "command": "npm",
      "args": [
        "ci"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "types:check",
      "detail": "TypeScript type-check (no emit)",
      "type": "process",
      "command": "npx",
      "args": [
        "tsc",
        "--noEmit"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "lint:fix",
      "detail": "ESLint --fix (if configured)",
      "type": "process",
      "command": "npx",
      "args": [
        "eslint",
        ".",
        "--ext",
        ".ts,.tsx,.js,.jsx",
        "--fix"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}